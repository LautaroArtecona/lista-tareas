<%- include ('../partials/header')-%>
<body class="text-center mx-4">
    <div class="supercont shadow-lg p-3 mb-2 rounded-3">

        <div class="row justify-content-center">
            <h1 class="col-9 fw-lighter font-monospace p-3">Lista de tareas</h1>
        </div>

        <div class="row justify-content-center mt-3">
            <% for(let i=0; i< newListItems.length ; i++) { %>
            <form action="/delete" method="post" class="col-10 col-sm-7 mt-1">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkbox" onchange="form.submit()" value="<%=newListItems[i].id%>" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        <%= newListItems[i].nombre %>
                    </label>
                </div>
            </form>
            <% } %>
        </div>

        <form method="post" action="/" class="justify-content-center mt-3 row no-wrap mx-4">
            <button type="submit" name="listSubmit" class="btn btn-secondary col-auto">+</button>
            <div class="col-10 col-sm-7">
                <input type="text" name="newTodo" class="form-control" autocomplete="off">
            </div>
        </form>

    </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</html>